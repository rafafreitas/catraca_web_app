<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_selector"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:fillViewport="true"
    tools:context="com.example.rafael.catraca_web_app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            >

            <ImageView
                android:id="@+id/img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/face_woman"
                />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img"
                android:fontFamily="monospace"
                android:text="@string/info_reset_pass_01"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                />


        </RelativeLayout>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="70dp"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardBackgroundColor="@color/colorNPrimaryDark"
            >

            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="@string/info_reset_pass_03"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_marginTop="14dp"
                />
        </android.support.v7.widget.CardView>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            >

            <EditText
                android:id="@+id/input_email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_email_reset"
                />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            >

            <EditText
                android:id="@+id/input_date"
                android:imeOptions="actionDone"
                android:inputType="date"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_date_reset"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorBlack"
                />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_reset_pass"
            android:background="@color/color_btn"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/questionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"

            android:textSize="9pt"
            android:text="@string/btn_question_pass"
            android:textColor="@color/colorWhite"
            />

        <TextView
            android:id="@+id/isClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textSize="10pt"
            android:text="@string/btn_login"
            android:textColor="@color/colorWhite"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="8pt"
                android:text="@string/info_copyright"
                android:textColor="@color/colorWhite"

                />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
