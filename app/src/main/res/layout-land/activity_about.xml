<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@drawable/landscape_background_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rafael.catraca_web_app.AboutActivity">

    <LinearLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="match_parent">

        <TextView
            android:textAlignment="center"
            android:text="Welcome to Landscape MODE"
            android:textColor="@color/colorBlack"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAlignment="center"
            android:text="Observe o LOGCAT para obter informações em tempo real sobre a situação de sua tela!"
            android:paddingBottom="30dp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="O que é o CatracaWEB?"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Informações sobre o aplicativo CATRACAWEB serão colocados aqui..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:text="Para que serve?"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Aqui ficarão as informações visando a serventia do aplicativo."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Informações."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Informações.."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Informações..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Informações...."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btn_Voltar"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:text="Voltar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
